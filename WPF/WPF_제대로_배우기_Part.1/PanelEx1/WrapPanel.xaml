<Window x:Class="PanelEx1.WrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelEx1"
        mc:Ignorable="d"
        Title="WrapPanel" Height="300" Width="300">

    <WrapPanel Name="wp1" VerticalAlignment="Top">
        <Rectangle Height="50" Width="50" Stroke="Black" Fill="Red" Name="rec1"></Rectangle>
        <Rectangle Height="50" Width="50" Stroke="Black" Fill="pink" Name="rec2"></Rectangle>
        <Rectangle Height="50" Width="50" Stroke="Black" Fill="Orange" Name="rec3"></Rectangle>
        <Rectangle Height="50" Width="50" Stroke="Black" Fill="Coral" Name="rec4"></Rectangle>
        <Rectangle Height="50" Width="50" Stroke="Black" Fill="LemonChiffon" Name="rec5"></Rectangle>
    </WrapPanel>
</Window>
