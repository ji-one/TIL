<Window x:Class="BorderEx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorderEx"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <Border Name="BorderEx" 
        BorderBrush="Black" BorderThickness="5" CornerRadius="5"
            MaxHeight="250" MinHeight="150" MaxWidth="250" MinWidth="150"
        Loaded="Border_Loaded" SizeChanged="Border_SizeChanged">
        <Label Name="lb"/>
    </Border>
</Window>
