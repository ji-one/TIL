<Window x:Class="TextBoxEx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBoxEx"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="텍스트 입력" Margin="5"/>
        <TextBox Grid.Row="1" 
                 Name="MyTb" 
                 Margin="5" 
                 MaxLength="16"
                 CharacterCasing="Upper"
                 TextChanged="MyTb_TextChanged"/>
        <Button Grid.Row="2" Content="확인" Margin="5" Click="Btn_Click"/>
        <Label Grid.Row="3" Name="MyLb" Margin="5"/>
    </Grid>
</Window>
